@model List<Dictionary<string, string>>

@{
    Layout = null;
    var query = Context.Request.Query.ToDictionary(x => x.Key, x => x.Value.ToString());
    query.Remove("email");
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mock Auth</title>
    <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" rel="stylesheet">
</head>
<body class="bg-light">
<div class="d-flex flex-column justify-content-center min-vh-100 gap-1 m-auto" style="width: 330px">
    <div class="d-flex flex-column justify-content-center min-vh-100 gap-1 m-auto" style="width: 330px">
        <div class="card">
            <h5 class="card-header">Login as</h5>
            <div class="list-group list-group-flush">
                @foreach (var user in Model)
                {
                    user.TryGetValue("picture", out var picture);
                    user.TryGetValue("given_name", out var givenName);
                    user.TryGetValue("family_name", out var familyName);
                    user.TryGetValue("email", out var email);

                    <a href="@QueryString.Create(new Dictionary<string, string?>(query) { { "email", user["email"] } }).ToUriComponent()"
                       class="list-group-item list-group-item-action d-flex gap-3 py-3">
                        <img alt="" class="rounded-circle flex-shrink-0" height="48" src="@picture"
                             width="48">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">@givenName @familyName</h6>
                                <p class="mb-0 opacity-75">@email</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

    </div>
</div>

</body>
</html>